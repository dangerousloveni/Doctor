<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/dlbg"
    tools:context="dc.example.xx.doctor.Loading">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="262dp"
        android:src="@drawable/lf"
        android:id="@+id/lf"
        android:layout_marginTop="95dp"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/user"
        android:src="@drawable/user"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="93dp"
        android:layout_marginTop="131dp"
        android:hint="账户"
        android:singleLine="true"


        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/pw"
        android:src="@drawable/pw"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/user"
        android:layout_alignLeft="@+id/user"
        android:layout_alignStart="@+id/user" />

    <EditText
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="93dp"
        android:layout_marginTop="202dp"

        android:hint="密码"
        android:singleLine="true"
        android:inputType="textPassword"
        android:id="@+id/editText" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/button"
        android:text="登陆"
        android:textSize="20dp"
        android:background="@color/colorButton"
        android:layout_below="@+id/pw"
        android:layout_alignLeft="@+id/pw"
        android:layout_marginTop="20dp"
       />

    <CheckBox
        android:text="记住密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/pw"
       />


</RelativeLayout>
